<div class="panel panel-default">
  <div class="panel-body">
      <div class="content">
       <% if user_signed_in? %>
          
          
          <!-- PENDING START -->
          
          <% if @user.requested_friends.size > 0 %>
          <h4 class="pendingH">Incoming connection requests(<%= @user.requested_friends.size %>)</h4>
            <hr>
          <% @user.requested_friends.each do |friend| %>
                  <div class="thumbnail">
                    
                      <%= link_to (image_tag friend.image.url(:thumb)), friend %>
                          <h5 class="userMain"><%= friend.username %></h5>
                          
                          <div class="btn-group">
                              <%= link_to user_accept_path(friend), class: "btn btn-default btn-sm" do %>

    <span class="glyphicon glyphicon-ok"></span>
    Accept

  <% end %>
            
                              <%= link_to "#", class: "btn btn-default btn-sm" do %>

    <span class="glyphicon glyphicon-remove"></span>
    Decline
                             
                              <% end %>
                              
                        </div>
                        
                          
                  </div>
                  <% end %>
          <% end %>
           
           
            <!-- PENDING END -->
            
            <!-- REQUESTED START -->
            
          <% if @user.pending_friends.size > 0 %>
          <h4 class="pendingH">Your pending  connection requests(<%= @user.pending_friends.size %>)</h4>
            <hr>
          <% @user.pending_friends.each do |friend| %>
                  <div class="thumbnail">
                    
                      <%= link_to (image_tag friend.image.url(:thumb)), friend %>
                          <h5 class="userMain"><%= friend.username %></h5>
                          
                        
                        
                          
                  </div>
                  <% end %>
          <% end %>
            
            <!-- REQUESTED END -->
           
            <% end %>
            
           
            
            
            
            
            
            
            
            
        
        
          <h4 class="connectionH">Your connections(<%= @user.friends.size %>)</h4>
          <hr>
          <div class="friendList">
          <ul class="friends">
          <% @user.friends.each do |friend| %>
          <li>
           <div class="thumbnail">
          <%= link_to (image_tag friend.image.url(:thumb)), friend %>
          <h5 class="userMain"><%= friend.username %></h5>
          </div>
          </li>
           
          <% end %>
          </ul>
          </div>

       
        
        
        </div>
    </div>
</div>
