<div class="panel panel-default">
  <div class="panel-body">
      <div class="content">
       <% if user_signed_in? %>
            <% if @user.id == current_user.id %>
      <% @user.requested_friends.each do |friend| %>
                  <div class="thumbnail">
                      <%= link_to (image_tag friend.image.url(:thumb)), friend %>
                          <%= friend.username %>
                  </div>
                  <% end %>
            
            <% end %>
        <% end %>
        </div>
    </div>
</div>