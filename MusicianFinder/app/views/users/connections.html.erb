<div class="panel panel-default">
  <div class="panel-body">
      <div class="content">
       <% if user_signed_in? %>
            <% if @user.id == current_user.id %>
          <% if @user.requested_friends.size > 0 %>
          <h4 class="pendingH">PENDING CONNECTION REQUESTS</h4>
            <hr>
          <% @user.requested_friends.each do |friend| %>
                  <div class="thumbnail">
                     <div class="text-center">
                      <%= link_to (image_tag friend.image.url(:thumb)), friend %>
                          <h4 class="userMain"><%= friend.username %></h4>
                          
                          <div class="btn-group">
                              <%= link_to user_accept_path(friend), class: "btn btn-default btn-sm" do %>

    <span class="glyphicon glyphicon-ok"></span>
    Accept

  <% end %>
            
                              <%= link_to "#", class: "btn btn-default btn-sm" do %>

    <span class="glyphicon glyphicon-remove"></span>
    Decline
                             
                              <% end %>
                              
                              
                    




      </div>
                         </div>
                          
                  </div>
                  <% end %>
          <% end %>
            <% end %>
        <% end %>
        
        <h4 class="connectionH">CONNECTIONS</h4>
          <hr>
          <div class="friendList">
          <ul class="friends">
          <% @user.friends.each do |friend| %>
          <li>
           <div class="thumbnail">
          <%= link_to (image_tag friend.image.url(:thumb)), friend %>
          <%= friend.username %>
          </div>
          </li>
           
          <% end %>
          </ul>
          </div>

       
        
        
        </div>
    </div>
</div>


