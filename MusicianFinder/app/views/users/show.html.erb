<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
          <%= image_tag @user.image.url(:medium) %>
        <div class="table-responsive">
          <table class='table table-borderless'>
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                  <td><%= @user.username %></td>
              </tr>
              <tr>
                <td><strong>Age:</strong></td>
                <td>Age of user</td>
              </tr>
              <tr>
                <td><strong>Location:</strong></td>
                  <td><%= @user.location %></td>
              </tr>
              <tr>
                <td><strong>Main Instrument:</strong></td>
                <td>Instrument of user</td>
              </tr>
              <tr>
                <td><strong>Something:</strong></td>
                <td>Blabla</td>
              </tr>
              
              
                   <% if user_signed_in? %>
              <% if @user.id != current_user.id %>
          <div class="btn-group">
              <%= link_to user_like_path(@user), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-envelope"></span>
    Mail
              
  <% end %>
             <%= link_to user_like_path(@user), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-thumbs-up"></span>
    Upvote
              <%= @user.get_upvotes.size %>
              
  <% end %>
              <% current_user.friends.each do |friend| %>
              <% if friend == @user %>
             <%= link_to "#", class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-music"</span>
    Your connection
              <% end %>
              <% else %>
              
              <%= link_to user_accept_path(@user), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-music"></span>
    Connect
              
  <% end %>
             
              
              
            
            
              <% end %>
             
             
             
              <% end %>             
              
              <% end %>
              <% end %>
             
         
          
      </div></td>
              </tr>
            </tbody>
          </table>
        </div>
        
      </div>
      
      <div class="col-md-7">
       <div class="content">
        <h4>ABOUT</h4>
        <hr>
          <%= @user.about %>
         
         <h4 class="test">INSTRUMENTS</h4>
         <hr>
          <%= @user.instruments %>
          
          <h4 class="test">INFLUENCES</h4>
          <hr>
          <%= @user.influences %>
          
          <h4 class="test">PRIOR EXPERIENCE</h4>
          <hr>
          <%= @user.experience %>
          
          <h4 class="test">GEAR</h4>
          <hr>
          <%= @user.gear %>
           <h4 class="test">CONNECTIONS(<%= link_to "show all", user_connections_path(@user)  %>)</h4>
          <hr>
          <div class="friendList">
          <ul class="friends">
          <% @user.friends.each do |friend| %>
          <li>
           <div class="thumbnail">
          <%= link_to (image_tag friend.image.url(:thumb)), friend %>
          <%= friend.username %>
          </div>
          </li>
           
          <% end %>
          </ul>
          </div>
          
          </div>
          
         
          
             
         
          
      </div>
    </div>
  </div>
</div>
