<div class="formBox">
<h2 class="regHead">Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true, class: "form-control" %>
  </div>
  
  <div class="form-group">
	  	<%= f.label :location %>
          <%= f.collection_select :location, Location::Cities, :to_s, :to_s, 
:include_blank => true, class: "form-control", required: true %>
	  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :image %><br />
      <%= f.file_field :image %>
  </div><br>

  <div class="form-group">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
