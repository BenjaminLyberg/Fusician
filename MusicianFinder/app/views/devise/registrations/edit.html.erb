<div class="panel-body">
<div class="formBoxEdit">
    <% if current_user.sign_in_count == 1 %>
    <h2 class="regHead"><% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-info") %>
		<% end %></h2>
    <h2 class="regHead">Time to set up your profile...</h2>
    <% else %>
<h2 class="regHead">Edit your profile</h2>
    <% end %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>



  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, autocomplete: "off", maxlength: 15, class: "form-control" %>
  </div>

  <div class="form-group">
	  	<%= f.label :location %>
          <%= f.collection_select :location, Location::Cities, :to_s, :to_s,
:include_blank => true, class: "form-control" %>
	  </div>

    <div class="form-group">
        <%= f.label :about %><br />
        <%= f.text_area :about, placeholder: "About yourself", maxlength: 350, autocomplete: "off", class: "form-control" %>
    </div>

  <div class="form-group">
      <%= f.label :instruments %><br />
      <%= f.text_field :instruments, placeholder: "Instruments you play", maxlength: 100, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :influences %><br />
      <%= f.text_area :influences, placeholder: "Influences", autocomplete: "off", maxlength: 200, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :experience %><br />
      <%= f.text_area :experience, placeholder: "Prior experience", autocomplete: "off", maxlength: 100, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :gear %><br />
      <%= f.text_area :gear, placeholder: "Gear you use", autocomplete: "off", maxlength: 250, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :media %><br />
      <%= f.text_field :media, placeholder: "Paste in embed url here", autocomplete: "off", maxlength: 200, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :profile_picture %><br />
      <%= f.file_field :image%>
  </div>



  <%= f.submit 'Update', :class => 'btn btn-block btn-primary' %>


<% end %>

<div class="form-group">

<p>Unhappy? <%= button_to 'Delete my account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-sm btn-danger' %></p>

<br><br>
<%= button_to "Back", :back, :class => 'btn btn-sm btn-primary' %>
</div>
</div>
</div>
